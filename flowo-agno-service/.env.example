# API Keys (At least one is required)
OPENAI_API_KEY=sk-***           # Required for OpenAI models (default)
ANTHROPIC_API_KEY=sk-***        # Required for Anthropic/Claude models
GOOGLE_API_KEY=***               # Required for Google/Gemini models
GROQ_API_KEY=***                 # Required for Groq models

# Agent Configuration
AGENT_PROVIDER=openai            # Options: openai, anthropic, google, groq
AGENT_MODEL=gpt-4o-mini          # Model ID or alias (default, advanced)

# Backend API
BACKEND_API_URL=http://backend:8081/api/v1
BACKEND_API_EXTERNAL_URL=http://localhost:8081/api/v1

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Service Configuration
SERVICE_PORT=8082
DEBUG_MODE=false

# Optional: Override settings from settings.yaml
# MEMORY_ENABLED=true
# STORAGE_ENABLED=true